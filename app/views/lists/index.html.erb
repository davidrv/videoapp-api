<h1>Lists</h1>

<table class='table table-striped align-middle'>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Items', list_items_path(list) %></td>
        <td><%= link_to 'History', list_versions_path(list) %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list_path(list), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New List', new_list_path, class: "btn btn-primary" %>